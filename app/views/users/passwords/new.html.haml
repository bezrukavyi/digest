.container.general-main-wrap
  .text-center
    %h1.mb-30= t('titles.forgot_password?')
    %p.general-password-text= t('.title')

  = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |field|
    .form-group.mb-25
      = field.input :email, autocomplete: 'true', placeholder: t('.enter_email'), label: false

    = field.button :submit, t('.email_instruct'), class: 'btn btn-default center-block mb-20'
    .text-center
      = link_to t('cancel'), :back, class: 'in-gold-500 mb-20'
