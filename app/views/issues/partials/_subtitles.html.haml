- subtitles.each do |subtitle|
  %p{:style => "color: #dd0000; font-size: 18px; font-weight: normal; margin-top: 24px; margin-bottom: 10px"}
    = subtitle.name
  %ul{:style => "padding-left: 18px; margin-top: 10px; list-style-type: square"}
    - subtitle.issue_items.each do |item|
      %li{:style => "color: #ee5533; margin-bottom: 16px; font-size: 16px; line-height: 16px"}
        = link_to item.title, link_path(item.link), :style => "color: #0055bb; margin-right: 4px; line-height: 20px; font-weight: normal", :target => "_blank"
        %br
        %span{:style => "font-size: 12px; color: #666666"}
          = item.description
        %span{:style => "color: #888888; font-weight: normal; font-size: 12px; text-transform: uppercase; font-family: verdana, arial, sans-serif"}
          %br
          = item.source
