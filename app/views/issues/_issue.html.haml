.issue-html
  = render 'issues/partials/style'
  %table{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "font-family: 'helvetica neue', helvetica, arial, sans-serif; font-size: 14px; line-height: 20px; color: #333", :width => "100%"}
    %tbody
      %tr
        %td{:align => "center", :valign => "top"}
          %table.container{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-collapse: collapse", :width => "600"}
            %tbody
              = render 'issues/partials/header', mailing_list: mailing_list, issue: issue
              %tr
                %td{:align => "left", :style => "padding: 16px 12px 12px 12px"}
                  = render 'issues/partials/description', issue: issue
                  = render 'issues/partials/top_items', issue: issue
                  = render 'issues/partials/subtitles', subtitles: issue.subtitles
